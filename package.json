{
	"name": "@snickbit/readmes",
	"version": "0.0.26",
	"description": "A ReadMe generator for monorepos. Generates a list of packages and attempts to pull their description using readme comment blocks.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"readmes": "./dist/index.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"start": "tsx ./src/index.ts",
		"test": "jest --ci",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.26",
		"@snickbit/node-utilities": "4.7.8",
		"@snickbit/out": "2.1.4",
		"@snickbit/upwords": "2.0.40",
		"@snickbit/utilities": "3.11.1",
		"ejs": "3.1.9",
		"fast-glob": "3.3.0",
		"lilconfig": "2.1.0"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.3",
		"@snickbit/semantic-release": "1.6.6",
		"@types/jest": "29.5.3",
		"esbuild": "0.18.13",
		"eslint": "8.45.0",
		"jest": "29.6.1",
		"semantic-release": "21.0.7",
		"ts-jest": "29.1.1",
		"tsx": "3.12.7",
		"tsup": "7.1.0",
		"typescript": "5.1.6"
	},
	"engines": {
		"node": ">= 14"
	},
	"preferGlobal": true
}
