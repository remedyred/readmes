{
	"name": "@snickbit/readmes",
	"version": "0.0.23",
	"description": "A ReadMe generator for monorepos. Generates a list of packages and attempts to pull their description using readme comment blocks.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"readmes": "./dist/index.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"start": "ts-node ./src/index.ts",
		"test": "jest --ci",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.24",
		"@snickbit/node-utilities": "4.4.9",
		"@snickbit/out": "2.0.45",
		"@snickbit/upwords": "2.0.25",
		"@snickbit/utilities": "3.4.2",
		"ejs": "3.1.8",
		"fast-glob": "3.2.11",
		"lilconfig": "2.0.6"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.4.0",
		"@snickbit/semantic-release": "1.6.6",
		"@types/jest": "29.4.0",
		"esbuild": "0.15.12",
		"eslint": "8.26.0",
		"jest": "29.2.2",
		"semantic-release": "21.0.5",
		"shx": "0.3.4",
		"ts-jest": "29.0.3",
		"ts-node": "10.9.1",
		"tsup": "7.1.0",
		"typescript": "5.0.4"
	},
	"engines": {
		"node": ">= 14"
	},
	"preferGlobal": true
}
