{
	"name": "@snickbit/readmes",
	"version": "0.0.0",
	"description": "Minimal monorepo readme generator. Generates a list of packages and attempts to pull their description using readme comment blocks.",
	"license": "MIT",
	"main": "./bin/readmes",
	"bin": {
		"readmes": "./bin/readmes"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/readmes src/index.ts --target=node12 --platform=node --external:shelljs",
		"build:meta": "pnpm run build --metafile",
		"clean": "shx rm -rf ./bin",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"start": "node bin/readmes",
		"watch": "pnpm run dev --watch"
	},
	"dependencies": {
		"@snickbit/node-cli": "^3.0.4",
		"@snickbit/node-utilities": "^4.4.2",
		"@snickbit/out": "^2.0.37",
		"@snickbit/upwords": "^2.0.21",
		"@snickbit/utilities": "^3.2.0",
		"ejs": "^3.1.8",
		"fast-glob": "^3.2.11",
		"lilconfig": "^2.0.6"
	},
	"devDependencies": {
		"esbuild": "^0.14.51",
		"shx": "^0.3.4",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
