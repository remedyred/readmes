{
	"name": "@snickbit/readmes",
	"version": "0.0.2",
	"description": "Minimal monorepo readme generator. Generates a list of packages and attempts to pull their description using readme comment blocks.",
	"license": "MIT",
	"main": "./bin/readmes",
	"bin": {
		"readmes": "./bin/readmes"
	},
	"files": [
		"bin",
		"templates"
	],
	"scripts": {
		"build": "pnpm run bundle --minify",
		"bundle": "esbuild --bundle --outfile=bin/readmes src/index.ts --target=node12 --platform=node --external:shelljs",
		"clean": "shx rm -rf ./bin",
		"dev": "pnpm run bundle --sourcemap",
		"start": "node bin/readmes",
		"watch": "pnpm run dev --watch"
	},
	"dependencies": {
		"@snickbit/eslint-config": "0.0.10",
		"@snickbit/node-cli": "^3.0.4",
		"@snickbit/node-utilities": "^4.4.2",
		"@snickbit/out": "^2.0.37",
		"@snickbit/upwords": "^2.0.21",
		"@snickbit/utilities": "^3.2.0",
		"@typescript-eslint/eslint-plugin": "5.33.0",
		"ejs": "^3.1.8",
		"eslint": "8.21.0",
		"eslint-plugin-beautiful-sort": "2.0.3",
		"eslint-plugin-json-files": "1.3.0",
		"eslint-plugin-sort-class-members": "1.14.1",
		"fast-glob": "^3.2.11",
		"lilconfig": "^2.0.6"
	},
	"devDependencies": {
		"esbuild": "0.15.2",
		"shx": "0.3.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
